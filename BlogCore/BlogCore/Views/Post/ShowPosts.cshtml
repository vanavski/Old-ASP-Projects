@model BlogCore.Web.Models.PostsPresenter
@using Westwind.AspNetCore.Markdown

<h3 class="modal-header">Posts by all users</h3>

<div class="list-group">
    @foreach (var post in Model.List.Reverse())
    {
        <form style="margin: 10px" class="list-inline-item" action="/Post/ShowPostById">
            @Markdown.ParseHtmlString("<h5>" + post.Header + "</h5>")
            <input type="hidden" name="postHeader" value="@post.Header" />
            <input class="float-right btn btn-outline-dark" type="submit" value="Show full post" />
        </form>
    }
</div>